@using CaseCoreApp.Models
@model List<TargetApp>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_PageLayout.cshtml";
}
<br />
<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Kullanıcı</th>
        <th>Açıklama</th>
        <th>Url Adresi</th>
        <th>Interval</th>
        <th>Düzenle</th>
        <th>Sil</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.id</td>
            <td>@x.User.username</td>
            <td>@x.name</td>
            <td>@x.url</td>
            <td>@x.interval</td>
            <td><a href="/TargetApp/UrlDetail/@x.id" class="btn btn-success">Güncelle</a></td>
            <td><a href="/TargetApp/DeleteUrl/@x.id" class="btn btn-danger">Sil</a></td>
            <td><a href="/TargetApp/UrlControl/@x.id" class="btn btn-info">Kontrol Et</a></td>
        </tr>
    }

</table>
<a href="/TargetApp/NewUrl" class="btn btn-primary">Yeni URL Ekle</a>

